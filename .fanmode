#!/bin/bash
FAN_MODE=$(cat /sys/devices/platform/faustus/throttle_thermal_policy)
if [ $FAN_MODE == "1" ]; then
	xsetroot -name "Current Fan Mode: TURBO"
elif [ $FAN_MODE == "0" ]; then
	xsetroot -name "Current Fan Mode: NORMAL"
elif [ $FAN_MODE == "2" ]; then
	xsetroot -name "Current Fan Mode: SILENT"
else 
	xsetroot -name "ERROR: Failed to get current Fan Mode!"
fi
