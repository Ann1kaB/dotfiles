#!/bin/bash
prime-offload
# restore the background
pulseaudio &
wal -i ~/Pictures/wal/002.png
xrdb ~/.Xresources
#node ~/playerctl-firefox-youtube/server.js &
lxsession &
dunst &
if [ $(optimus-manager -- status | awk '/^Current GPU mode/{print $5}') == "nvidia" ]; then
	xrandr --output eDP-1-1 --gamma 0.8:0.8:0.8 &
else
	xgamma -gamma 0.8 &
fi
# time and date in dwm

if [[ $(xrandr | awk '/HDMI-0/ {print $2}') = "connected" ]]; then
	xrandr --output eDP-1-1 --output HDMI-0 --auto --left-of eDP-1-1
fi

while true; do
	sh .xroot
	sleep 15
done &
