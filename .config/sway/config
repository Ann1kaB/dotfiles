# scrot bind
# fullscreen
bindsym Print exec "scrot -m '/home/hyperkvm/Pictures/screenshots/%s_%H%M_%d.%m.%Y_$wx$h.png'"
# 
bindsym Shift+Print exec "scrot -s '/home/hyperkvm/Pictures/screenshots/%s_%H%M_%d%m%Y_$wx$h.png'"
