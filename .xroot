#!/bin/sh

VER=$(dwm -v 2>&1)
DATE="$(/bin/date +"%a %d, %b // %I:%M%p")"
source ~/.sysxroot
BAT=$(cat /sys/class/power_supply/BAT1/capacity)
BAT_STATUS=$(cat /sys/class/power_supply/BAT1/status)

if [ $(nmcli device | awk '/enp2s0/{print $3}') = "connected" ]; then
	net_icon=""
elif [ $(nmcli device | awk '/wlan0/{print $3}') = "connected" ]; then
	net_icon=""
elif [ $(nmcli device | awk '/wlan0/{print $3}') = "disconnected" ]; then
	net_icon="⚠"
fi

if grep -qs '/mnt/nasdisk0' /proc/mounts; then
	nas_available_icon=""
fi

ROOT="$DATE // $VER // $bat1_icon $sink_icon ${net_icon}${nas_available_icon}$BT_DEV"

xsetroot -name "${ROOT}"
