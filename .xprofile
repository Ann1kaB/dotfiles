#!/bin/sh
if [ "$1" = "--start" ]; then
  #/usr/bin/prime-offload
  #pulseaudio &
  wal -i ~/Pictures/1123013.jpg
  xrdb ~/.Xresources
  #lxsession &
  dunst &
  xss-lock -n /usr/share/doc/xss-lock/dim-screen.sh -- slock &
fi

while true; do
  if [ $(($(/bin/date +"%S"))) -eq 0 ]; then
    sh ~/.xroot
    sleep 60
  else
    sh ~/.xroot
    sleep $((($(/bin/date +"%S")-60)*-1))
  fi
done &
